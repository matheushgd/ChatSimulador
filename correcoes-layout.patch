+    font-weight: 500;
+    color: #e9edef;
+    margin-bottom: 2px;
+}
+
+.call-details {
+    font-size: 13px;
+    color: #8696a0;
+}
+
+/* Mensagem Apagada */
+.message-bubble.deleted {
+    background: transparent;
+    border: 1px solid #3b4a54;
+}
+
+.deleted-message {
+    color: #8696a0;
+    font-style: italic;
+    font-size: 13px;
+    padding-right: 50px;
+}
+
+/* Input Inferior */
+.chat-input {
+    background: #202c33;
+    padding: 8px 16px;
+    display: flex;
+    align-items: center;
+    gap: 8px;
