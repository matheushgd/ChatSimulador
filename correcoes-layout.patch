+    max-height: 400px;
+    border-radius: 8px;
+    display: block;
+}
+
+.message-bubble.media .message-time {
+    background: rgba(0,0,0,0.4);
+    padding: 2px 6px;
+    border-radius: 10px;
+    bottom: 8px;
+    right: 8px;
+}
+
+.message-bubble.sticker {
+    background: transparent;
+    padding: 0;
+    box-shadow: none;
+}
+
+.message-sticker {
+    width: 200px;
+    height: 200px;
+    object-fit: contain;
+    display: block;
+}
+
+/* Chamadas */
