+}
+
+.message {
+    display: flex;
+    margin-bottom: 8px;
+    max-width: 100%;
+}
+
+.message.received {
+    justify-content: flex-start;
+}
+
+.message.sent {
+    justify-content: flex-end;
+}
+
+/* Bal√£o de Mensagem */
+.message-bubble {
+    position: relative;
+    padding: 6px 7px 20px 9px;
+    max-width: 65%;
+    min-width: 80px;
+    word-wrap: break-word;
+    border-radius: 7.5px;
