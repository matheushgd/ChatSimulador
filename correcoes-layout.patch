+    padding: 8px 12px 24px 12px;
+}
+
+.call-message {
+    display: flex;
+    align-items: center;
+    gap: 12px;
+}
+
+.call-icon {
+    font-size: 20px;
+    color: #8696a0;
+}
+
+.call-icon.missed {
