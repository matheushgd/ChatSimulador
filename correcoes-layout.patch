+
+.input-field {
+    flex: 1;
+    background: #2a3942;
+    border: none;
+    outline: none;
+    padding: 10px 16px;
+    font-size: 15px;
+    border-radius: 21px;
+    color: #e9edef;
+}
+
+.input-field::placeholder {
+    color: #8696a0;
+}
+
+.input-icon {
+    background: none;
+    border: none;
+    font-size: 24px;
+    cursor: pointer;
+    color: #8696a0;
+    padding: 8px;
+    border-radius: 50%;
+    transition: background 0.2s;
+}
+
+.input-icon:hover {
+    background: rgba(255,255,255,0.1);
+}
+
+/* Scrollbar Personalizada */
+.chat-messages::-webkit-scrollbar {
+    width: 6px;
+}
+
+.chat-messages::-webkit-scrollbar-track {
+    background: transparent;
+}
+
+.chat-messages::-webkit-scrollbar-thumb {
